<Page
    x:Class="IoT_rfid.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IoT_rfid"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush x:ConnectionId='1' x:Name="background" Stretch="Fill" ImageSource="Assets/Background/background1.jpg"/>
        </Grid.Background>
        <TextBlock x:ConnectionId='2' x:Name="textBoxUser" HorizontalAlignment="Left" Margin="124,1,0,0" TextWrapping="Wrap" Text="User" VerticalAlignment="Top" FontSize="48">
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Chartreuse" Offset="0"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>

        </TextBlock>
        <Image x:ConnectionId='3' x:Name="imageUser" HorizontalAlignment="Left" Height="263" Margin="81,117,0,0" VerticalAlignment="Top" Width="372"/>

    </Grid>
</Page>

